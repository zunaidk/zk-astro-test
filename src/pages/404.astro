---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="404 - Page Not Found">
  <Header />
  <main id="main-content" class="bg-surface">
    <section class="py-16 md:py-20 min-h-[60vh] flex items-center">
      <div class="container">
        <div class="text-center mx-auto">
          <h1 class="text-7xl md:text-9xl font-extrabold leading-none mb-4 bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">
            404
          </h1>
          <h2 class="text-2xl md:text-3xl font-bold mb-4 text-content">Page Not Found</h2>
          <p class="text-content-light text-lg mb-8">
            The page you're looking for doesn't exist or has been moved.
          </p>
          <a href="/" class="inline-block bg-primary hover:bg-primary-dark text-white font-semibold px-6 py-3 rounded-lg transition-all hover:-translate-y-0.5 hover:shadow-md no-underline cursor-pointer">
            Go Back Home
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>
