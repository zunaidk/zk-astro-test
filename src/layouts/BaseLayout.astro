---
import '../styles/global.css';
import CustomScripts from '../components/CustomScripts.astro';

interface Props {
  title: string;
  rawTitle?: string;
  description?: string;
  image?: string;
  canonicalUrl?: string;
  robots?: string[];
  openGraph?: {
    title?: string;
    description?: string;
    image?: string;
    type?: string;
  };
  twitter?: {
    title?: string;
    description?: string;
    image?: string;
    card?: string;
  };
}

const SITE_NAME = 'My Astro Site';
const SEPARATOR = ' - ';

/**
 * Builds the full page title.
 * - rawTitle: use as-is (e.g. from Yoast/RankMath which already includes the site name)
 * - title: appends SEPARATOR + SITE_NAME (e.g. "About Us - My Site")
 * - neither: falls back to SITE_NAME alone
 */
function getTitle(title: string, rawTitle?: string): string {
  if (rawTitle) return rawTitle;
  if (!title) return SITE_NAME;
  return `${title}${SEPARATOR}${SITE_NAME}`;
}

const { 
  title, 
  rawTitle,
  description = 'A modern Astro site migrated from WordPress',
  image,
  canonicalUrl,
  robots,
  openGraph,
  twitter,
} = Astro.props;

const fullTitle = getTitle(title, rawTitle);

// Prepare meta values with fallbacks
const ogTitle = openGraph?.title || fullTitle;
const ogDescription = openGraph?.description || description;
const ogImage = openGraph?.image || image;
const ogType = openGraph?.type || 'website';

const twitterTitle = twitter?.title || fullTitle;
const twitterDescription = twitter?.description || description;
const twitterImage = twitter?.image || image;
const twitterCard = twitter?.card || 'summary_large_image';

// Build robots meta content
const robotsContent = robots && robots.length > 0 ? robots.join(', ') : 'index, follow';

// Get canonical URL - must be absolute for SEO
const canonical = canonicalUrl && /^https?:\/\//.test(canonicalUrl)
  ? canonicalUrl
  : new URL(canonicalUrl || Astro.url.pathname, Astro.site || Astro.url.origin).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content={robotsContent} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonical} />
    <meta name="generator" content={Astro.generator} />
    <title>{fullTitle}</title>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={ogDescription} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    
    <!-- Twitter -->
    <meta name="twitter:card" content={twitterCard} />
    <meta name="twitter:url" content={Astro.url} />
    <meta name="twitter:title" content={twitterTitle} />
    <meta name="twitter:description" content={twitterDescription} />
    {twitterImage && <meta name="twitter:image" content={twitterImage} />}
    
    <style is:global>
      /* Thin dark scrollbar */
      ::-webkit-scrollbar {
        width: 6px;
        height: 6px;
      }
      
      ::-webkit-scrollbar-track {
        background: transparent;
      }
      
      ::-webkit-scrollbar-thumb {
        background: var(--color-content-lighter);
        border-radius: 3px;
      }
      
      ::-webkit-scrollbar-thumb:hover {
        background: var(--color-content-light);
      }
      
      /* Firefox */
      * {
        scrollbar-width: thin;
        scrollbar-color: var(--color-content-lighter) transparent;
      }
    </style>
    <slot name="head" />
    <CustomScripts />
    {/* Tailwind CDN for dev: enables runtime class scanning so dynamically added classes work (e.g. class editor). */}
    {import.meta.env.DEV && (
      <script is:inline src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    )}
  </head>
  <body class="antialiased bg-surface text-content">
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:px-4 focus:py-2 focus:bg-primary focus:text-white focus:rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-dark">
      Skip to main content
    </a>
    <slot />
    
    {/* Development-only: PhantomWP iframe scripts (inspector, class editor, navigation) */}
    {import.meta.env.DEV && (
      <script is:inline src="/__phantom_iframe_scripts.js"></script>
    )}
  </body>
</html>
