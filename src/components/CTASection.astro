---
import Zap from '@lucide/astro/icons/zap';
import ArrowRight from '@lucide/astro/icons/arrow-right';
import ExternalLink from '@lucide/astro/icons/external-link';
import Github from '@lucide/astro/icons/github';
import ShieldCheck from '@lucide/astro/icons/shield-check';

interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonUrl?: string;
}

const { 
  title = "Ready to Build Something Great?",
  description = "Start customizing your site, add your content, and deploy it to the world. The possibilities are endless.",
  buttonText = "Get Started",
  buttonUrl = "https://docs.astro.build"
} = Astro.props;
---

<section class="relative py-32 md:py-40 overflow-hidden">
    <!-- Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary via-primary-dark to-primary"></div>
    
    <!-- Animated Background Pattern -->
    <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0 bg-[linear-gradient(to_right,white_1px,transparent_1px),linear-gradient(to_bottom,white_1px,transparent_1px)] bg-[size:4rem_4rem]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
            <!-- Icon -->
            <div class="inline-flex items-center justify-center w-20 h-20 mb-8 bg-white/10 backdrop-blur-sm rounded-3xl border border-white/20">
                <Zap class="w-10 h-10 text-white" />
            </div>
            
            <!-- Heading -->
            <h2 class="text-4xl sm:text-5xl md:text-6xl font-black text-white mb-6 tracking-tight">
                {title}
            </h2>
            
            <!-- Description -->
            <p class="text-lg md:text-xl text-white/80 mb-12 leading-relaxed max-w-2xl mx-auto">
                {description}
            </p>
            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <a 
                    href={buttonUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group relative inline-flex items-center justify-center gap-3 px-8 py-4 bg-white text-primary-dark rounded-2xl font-bold text-lg shadow-2xl hover:shadow-white/25 hover:-translate-y-1 transition-all duration-300 overflow-hidden cursor-pointer"
                >
                    <span class="absolute inset-0 bg-gradient-to-r from-surface to-white opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                    <span class="relative z-10">{buttonText}</span>
                    <ArrowRight class="w-5 h-5 relative z-10 group-hover:translate-x-1 transition-transform duration-300" />
                </a>
                <a 
                    href="#"
                    class="inline-flex items-center gap-2 px-6 py-4 text-white/90 hover:text-white font-semibold transition-colors duration-300 cursor-pointer"
                >
                    <span>View Examples</span>
                    <ExternalLink class="w-4 h-4" />
                </a>
            </div>
            
            <!-- Trust Badges -->
            <div class="mt-16 pt-8 border-t border-white/10">
                <p class="text-white/60 text-sm mb-6">Trusted by developers worldwide</p>
                <div class="flex flex-wrap justify-center items-center gap-8 opacity-60">
                    <div class="flex items-center gap-2 text-white">
                        <Github class="w-6 h-6" />
                        <span class="font-medium">Open Source</span>
                    </div>
                    <div class="flex items-center gap-2 text-white">
                        <ShieldCheck class="w-6 h-6" />
                        <span class="font-medium">Secure</span>
                    </div>
                    <div class="flex items-center gap-2 text-white">
                        <Zap class="w-6 h-6" />
                        <span class="font-medium">Fast</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
