---
import Star from '@lucide/astro/icons/star';
import Zap from '@lucide/astro/icons/zap';
import ArrowRight from '@lucide/astro/icons/arrow-right';
import ArrowDown from '@lucide/astro/icons/arrow-down';
import Palette from '@lucide/astro/icons/palette';
import Cloud from '@lucide/astro/icons/cloud';

/**
 * Hero Component
 * A customizable hero section with gradient background, floating elements, and CTAs.
 */

interface Props {
    title?: string;
    subtitle?: string;
    badgeText?: string;
    ctaText?: string;
    ctaHref?: string;
    showStats?: boolean;
}

const { 
    title = '<span class="bg-gradient-to-r from-primary to-primary-dark bg-clip-text text-transparent">Build Amazing</span><br /><span class="text-content">Web Experiences</span>',
    subtitle = 'Your lightning-fast Astro site is ready. Start creating beautiful, performant web applications with modern tools.',
    badgeText = 'Powered by Astro',
    ctaText = 'Get Started',
    ctaHref = 'https://docs.astro.build',
    showStats = true
} = Astro.props;
---

<section class="relative min-h-[90vh] flex items-center overflow-hidden bg-surface">
    <!-- Animated Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-primary-light/10"></div>
    
    <!-- Animated Grid Pattern -->
    <div class="absolute inset-0 opacity-40">
        <div class="absolute inset-0 bg-[linear-gradient(to_right,var(--color-outline)_1px,transparent_1px),linear-gradient(to_bottom,var(--color-outline)_1px,transparent_1px)] bg-[size:4rem_4rem]"></div>
    </div>
    
    <div class="container mx-auto px-4 py-20 md:py-32 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
            <!-- Badge -->
            {badgeText && (
                <div class="inline-flex items-center gap-3 px-5 py-2.5 bg-surface/80 backdrop-blur-xl rounded-full border border-outline/50 shadow-lg shadow-primary/5 mb-10">
                    <span class="relative flex h-2.5 w-2.5">
                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-gradient-to-r from-primary to-primary-light"></span>
                    </span>
                    <span class="text-sm font-semibold text-content tracking-wide">{badgeText}</span>
                    <Star class="w-4 h-4 text-primary fill-primary" />
                </div>
            )}
            
            <!-- Main Heading -->
            <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black mb-8 leading-[1.1] tracking-tight" set:html={title} />
            
            <p class="text-lg sm:text-xl md:text-2xl text-content-light mb-12 leading-relaxed max-w-2xl mx-auto">
                {subtitle}
            </p>
            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <a 
                    href={ctaHref} 
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group relative inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-primary to-primary-dark text-white rounded-2xl font-bold text-lg shadow-xl shadow-primary/25 hover:shadow-2xl hover:shadow-primary/30 hover:-translate-y-1 transition-all duration-300 overflow-hidden cursor-pointer"
                >
                    <span class="absolute inset-0 bg-gradient-to-r from-primary-light to-primary opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                    <Zap class="w-5 h-5 relative z-10" />
                    <span class="relative z-10">{ctaText}</span>
                    <ArrowRight class="w-5 h-5 relative z-10 group-hover:translate-x-1 transition-transform duration-300" />
                </a>
                <a 
                    href="#features"
                    class="group inline-flex items-center gap-2 px-8 py-4 bg-surface border-2 border-outline hover:border-primary text-content rounded-2xl font-semibold text-lg hover:bg-surface-alt transition-all duration-300 cursor-pointer"
                >
                    <span>Learn More</span>
                    <ArrowDown class="w-5 h-5 group-hover:translate-y-1 transition-transform duration-300" />
                </a>
                <slot name="secondary-cta" />
            </div>
            
            <!-- Stats or Trust Indicators -->
            {showStats && (
                <div class="mt-20 pt-12 border-t border-outline/50">
                    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 sm:gap-12">
                        <div class="group text-center">
                            <div class="inline-flex items-center justify-center w-16 h-16 mb-4 bg-gradient-to-br from-primary/10 to-primary/5 rounded-2xl border border-primary/10 group-hover:scale-110 group-hover:border-primary/30 transition-all duration-300">
                                <Zap class="w-8 h-8 text-primary" />
                            </div>
                            <h3 class="text-lg font-bold text-content mb-1">Lightning Fast</h3>
                            <p class="text-sm text-content-light">Zero JS by default</p>
                        </div>
                        <div class="group text-center">
                            <div class="inline-flex items-center justify-center w-16 h-16 mb-4 bg-gradient-to-br from-primary/10 to-primary/5 rounded-2xl border border-primary/10 group-hover:scale-110 group-hover:border-primary/30 transition-all duration-300">
                                <Palette class="w-8 h-8 text-primary" />
                            </div>
                            <h3 class="text-lg font-bold text-content mb-1">Beautiful Design</h3>
                            <p class="text-sm text-content-light">Tailwind CSS powered</p>
                        </div>
                        <div class="group text-center">
                            <div class="inline-flex items-center justify-center w-16 h-16 mb-4 bg-gradient-to-br from-primary/10 to-primary/5 rounded-2xl border border-primary/10 group-hover:scale-110 group-hover:border-primary/30 transition-all duration-300">
                                <Cloud class="w-8 h-8 text-primary" />
                            </div>
                            <h3 class="text-lg font-bold text-content mb-1">Deploy Anywhere</h3>
                            <p class="text-sm text-content-light">Edge-ready hosting</p>
                        </div>
                    </div>
                </div>
            )}
            
            <slot />
        </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
        <ArrowDown class="w-6 h-6 text-content-light" />
    </div>
</section>
