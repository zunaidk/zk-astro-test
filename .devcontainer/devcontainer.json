{
  "name": "Astro Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },
  "postCreateCommand": "npm install && npm install -g pm2 && npm install node-pty && chmod +x .devcontainer/*.sh .devcontainer/phantomwp-ide && bash .devcontainer/startup.sh",
  "postStartCommand": "bash .devcontainer/startup.sh",
  "forwardPorts": [
    4321,
    8080
  ],
  "portsAttributes": {
    "4321": {
      "label": "Astro Dev Server",
      "onAutoForward": "ignore",
      "visibility": "public"
    },
    "8080": {
      "label": "WebSocket Server (File Sync)",
      "onAutoForward": "ignore",
      "visibility": "public"
    }
  },
  "otherPortsAttributes": {
    "onAutoForward": "ignore"
  },
  "remoteEnv": {
    "JWT_PUBLIC_KEY": "${localEnv:JWT_PUBLIC_KEY}"
  },
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "extensions": [
        "astro-build.astro-vscode",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "workbench.startupEditor": "none"
      }
    }
  }
}